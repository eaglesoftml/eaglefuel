<odoo>
    <!--view for versement-->
    <record model="ir.ui.view" id="versement_tree_view">
        <field name="name">eaglefuel.versement.tree</field>
        <field name="model">eaglefuel.versement</field>
        <field name="arch" type="xml">
            <tree>
                <field name="ref"/>
                <field name="montant_versement"/>
<!--                <field name="heure_versement"/>-->
<!--                <field name="nbre_versement"/>-->
<!--                <field name="servicepompiste_id"/>-->
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="versement_form_view">
        <field name="name">eaglefuel.versement.form</field>
        <field name="model">eaglefuel.versement</field>
        <field name="arch" type="xml">
            <form>
                <header></header>
                <sheet>
                    <group>
                        <group>
                            <field name="ref"/>
                            <field name="montant_versement"/>
<!--                            <field name="heure_versement"/>-->
<!--                            <field name="nbre_versement"/>-->
                        </group>
                        <group>
<!--                            <field name="servicepompiste_id"/>-->
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record model='ir.actions.act_window' id='versement_action'>
           <field name="name">versement</field>
           <field name="res_model">eaglefuel.versement</field>
           <field name="view_mode">tree,form,kanban</field>
           <field name="help" type ="html">
                <p class="o_view_nocontent_smiling_face"></p>
           </field>
    </record>

    <menuitem name="Versements" id="sub_versement_root" parent="sub_servicepompiste_root" action="versement_action"/>

</odoo>